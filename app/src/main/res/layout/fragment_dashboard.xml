<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:visibility="visible">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_dash" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/singleChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userInfo"
                style="@style/login_header_text"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:textColor="@color/white"
                android:text=""
                android:visibility="gone"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/singleChild" />


            <TextView
                android:id="@+id/welcomeText"
                style="@style/login_header_text"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Welcome to Trig Training App"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/userInfo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/round_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@+id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/welcomeText">

                <ImageView
                    android:id="@+id/inductionIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/ic_induction"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="64"
                    android:progressDrawable="@drawable/progress_bar_bg"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/textViewChildProfile"
                    app:layout_constraintTop_toBottomOf="@+id/textViewChildProfile" />

                <TextView
                    android:id="@+id/textViewChildProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Time Spent 00h 16m"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewChildProfileDetails" />

                <TextView
                    android:id="@+id/textViewChildProfileDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Induction Training"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inductionIcon" />

                <TextView
                    android:id="@+id/percentageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="64%"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar2"
                    app:layout_constraintStart_toEndOf="@+id/progressBar2"
                    app:layout_constraintTop_toTopOf="@+id/progressBar2" />

                <TextView

                    android:id="@+id/vidsRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="3/5"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="#d2d2d2"
                    app:layout_constraintBottom_toBottomOf="@+id/percentageView"
                    app:layout_constraintStart_toEndOf="@+id/percentageView"
                    app:layout_constraintTop_toTopOf="@+id/percentageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/round_bg"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/center"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">


                <ImageView
                    android:id="@+id/functionalIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/functional"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/functionProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="64"
                    android:progressDrawable="@drawable/progress_bar_bg"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/functionalData"
                    app:layout_constraintTop_toBottomOf="@+id/functionalData" />

                <TextView
                    android:id="@+id/functionalData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Time Spent hh mm"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/functionHeading" />

                <TextView
                    android:id="@+id/functionHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Functional Training"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/functionalIcon" />

                <TextView
                    android:id="@+id/functionalPercentageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="0%"
                    app:layout_constraintBottom_toBottomOf="@+id/functionProgressBar"
                    app:layout_constraintStart_toEndOf="@+id/functionProgressBar"
                    app:layout_constraintTop_toTopOf="@+id/functionProgressBar" />

                <TextView

                    android:id="@+id/functionalVidsRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="0/5"
                    app:layout_constraintBottom_toBottomOf="@+id/view1"
                    app:layout_constraintStart_toEndOf="@+id/view1"
                    app:layout_constraintTop_toTopOf="@+id/view1" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="#d2d2d2"
                    app:layout_constraintBottom_toBottomOf="@+id/functionalPercentageView"
                    app:layout_constraintStart_toEndOf="@+id/functionalPercentageView"
                    app:layout_constraintTop_toTopOf="@+id/functionalPercentageView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/skillContainer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/round_bg"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/rightGuide"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/center"
                app:layout_constraintTop_toBottomOf="@+id/welcomeText">

                <ImageView
                    android:id="@+id/skillTrainingIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/skill_training_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="64"
                    android:progressDrawable="@drawable/progress_bar_bg"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/skillTrainingdesc"
                    app:layout_constraintTop_toBottomOf="@+id/skillTrainingdesc" />

                <TextView
                    android:id="@+id/skillTrainingdesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Time Spent hh mm"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/skillTrainingHeading" />

                <TextView
                    android:id="@+id/skillTrainingHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Skill Training"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/skillTrainingIcon" />

                <TextView
                    android:id="@+id/skillPercentageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="0%"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar3"
                    app:layout_constraintStart_toEndOf="@+id/progressBar3"
                    app:layout_constraintTop_toTopOf="@+id/progressBar3" />

                <TextView

                    android:id="@+id/skillVidsRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="0/5"
                    app:layout_constraintBottom_toBottomOf="@+id/view3"
                    app:layout_constraintStart_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/view3" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="#d2d2d2"
                    app:layout_constraintBottom_toBottomOf="@+id/skillPercentageView"
                    app:layout_constraintStart_toEndOf="@+id/skillPercentageView"
                    app:layout_constraintTop_toTopOf="@+id/skillPercentageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otherCoursesContainer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_bg"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/rightGuide"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/center"
                app:layout_constraintTop_toBottomOf="@id/skillContainer">

                <ImageView
                    android:id="@+id/otherTrainingIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/other_course"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/progressBar4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_bar_bg"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@+id/otherTrainingdesc"
                    app:layout_constraintTop_toBottomOf="@+id/otherTrainingdesc" />

                <TextView
                    android:id="@+id/otherTrainingdesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Time Spent hh mm"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/otherTrainingHeading" />

                <TextView
                    android:id="@+id/otherTrainingHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Other Courses"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/otherTrainingIcon" />

                <TextView
                    android:id="@+id/otherPercentageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="20%"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar4"
                    app:layout_constraintStart_toEndOf="@+id/progressBar4"
                    app:layout_constraintTop_toTopOf="@+id/progressBar4" />

                <TextView

                    android:id="@+id/otherVidsRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="1/5"
                    app:layout_constraintBottom_toBottomOf="@+id/view4"
                    app:layout_constraintStart_toEndOf="@+id/view4"
                    app:layout_constraintTop_toTopOf="@+id/view4" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="#d2d2d2"
                    app:layout_constraintBottom_toBottomOf="@+id/otherPercentageView"
                    app:layout_constraintStart_toEndOf="@+id/otherPercentageView"
                    app:layout_constraintTop_toTopOf="@+id/otherPercentageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/courseContainer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/round_bg"
                app:layout_constraintEnd_toStartOf="@+id/rightGuide"
                app:layout_constraintStart_toStartOf="@+id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/welcomeText">

                <ImageView
                    android:id="@+id/courseIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_course"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/courseNumber"
                    app:layout_constraintStart_toStartOf="@+id/courseHeading"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/courseHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Courses"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/courseNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/courseHeading"
                    app:layout_constraintStart_toEndOf="@+id/courseHeading"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/completedCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Completed: "
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/couseCompletedNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/completedCourse"
                    app:layout_constraintStart_toEndOf="@+id/completedCourse"
                    app:layout_constraintTop_toTopOf="@+id/completedCourse" />


                <TextView
                    android:id="@+id/courseDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Due: "
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/couseCompletedNumber" />

                <TextView
                    android:id="@+id/courseDueNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/courseDue"
                    app:layout_constraintStart_toEndOf="@+id/courseDue"
                    app:layout_constraintTop_toTopOf="@+id/courseDue" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/coursePieChart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideCourse"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/assessmentContainer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/round_bg"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintBottom_toTopOf="@+id/feedback"
                app:layout_constraintEnd_toStartOf="@+id/rightGuide"
                app:layout_constraintStart_toStartOf="@+id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/courseContainer">

                <ImageView
                    android:id="@+id/assessmentIcon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_assessment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/assessmentNumber"
                    app:layout_constraintStart_toStartOf="@+id/assessmentHeading"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/assessmentHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Assessments"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/assessmentNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/assessmentHeading"
                    app:layout_constraintStart_toEndOf="@+id/assessmentHeading"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Completed: "
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/completedNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/completed"
                    app:layout_constraintStart_toEndOf="@+id/completed"
                    app:layout_constraintTop_toTopOf="@+id/completed" />


                <TextView
                    android:id="@+id/due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Due: "
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/completedNumber" />

                <TextView
                    android:id="@+id/dueNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/due"
                    app:layout_constraintStart_toEndOf="@+id/due"
                    app:layout_constraintTop_toTopOf="@+id/due" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineAssessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guidelineAssessment"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Feedback"
                android:textColor="@color/theme_bg_color"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toTopOf="@+id/bottomGuide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_8sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_8sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/_20sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottomGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/_20sdp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>