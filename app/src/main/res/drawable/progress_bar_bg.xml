<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_50sdp"/>

            <gradient
                android:angle="90"
                android:endColor="#d2d2d2"
            android:startColor="#d2d2d2" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="@dimen/_50sdp" />

                <gradient
                    android:angle="90"
                    android:endColor="#32CD32"
                android:startColor="#32CD32" />
            </shape>
        </clip>
    </item>

</layer-list>