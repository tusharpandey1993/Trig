<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>


    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--login Screen dynamic UI changes BUGS-->

    <style name="login_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_23sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Login_infoTxtView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
    </style>

    <style name="Login_ORTxtView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_33sdp</item>


    </style>

    <style name="btn_login">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coustom_white</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="image_left_drawable_icon_size">
        <item name="android:layout_width">@dimen/_26sdp</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
    </style>

    <style name="login_editText_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="login_subheader_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="OTP_Tip2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_light</item>

    </style>


    <style name="toast_txtstyle_title">
        <item name="android:textColor">@color/coustom_white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="toast_txtstyle_message">
        <item name="android:textColor">@color/coustom_white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>


    <!-- Style for header text in the other form -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style for question text in the other form -->
    <style name="QuestionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- Style for answer text in the checkbox -->
    <style name="Checkbox_Answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--Line-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Style for answer text in the radio buttons -->
    <style name="RadioButton_Answer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>
